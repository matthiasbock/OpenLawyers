<html>
<head><title>Postausgang</title>
<meta http-equiv="content-type" content="text/html; charset=ISO-8859-1">
<link rel="stylesheet" type="text/css" href="/skin/styles.css">
<script src="scripts.js" type="text/javascript"></script>
</head>
<body onload="initlist();document.which.empfaenger.focus();">
<table class="mainframe" cellspacing=0 width="100%" height="100%">
<tr><td align="center" valign="middle">

	<form name="which" action="olclient.php" method="POST">
	<table class="dialog">
	
	<tr><td class="hauptpunkt" colspan="4">Postausgang registrieren</td></tr>
	
	<tr><td>Empfänger*</td><td><input type="radio" class="radio" name="woher" value="1" _checked_ _Eintrag_></td><td>Schreiben aus Aktenvita auswählen</td><td style="text-align:right;"><input _ButtonDisabled_ type="submit" class="button" name="add" value="Eintragen"></td></tr>
	<tr><td><input type="text" tabindex="1" class="textfield" style="width:100%;" maxlength="30" name="empfaenger"></td>
		<td></td>
		<td><select onFocus="javascript:document.which.woher[0].checked=true;" class="dropdown" style="width:100%;" tabindex="2" name="inhalt" size="1" _Eintrag_>
							<option value="_aktenvitaID_">_aktenvita_</option>
			</select></td>
		<td></td></tr>
	
	<tr><td></td>
		<td><input class="radio" type="radio" name="woher" value="2" _checked2_></td><td>oder eigene Eingabe des Inhaltes*</td><td></td></tr>
		
	<tr><td></td>
		<td></td>
		<td><input onKeyDown="javascript:document.which.woher[1].checked=true;" type="text" tabindex="5" class="textfield" style="width:100%;" maxlength="30" name="inhalt2"></td><td></td></tr>
		
	
	<tr><td>Abgesandt als</td><td></td><td>Abgesandt durch</td><td></td></tr>
	<tr><td><select class="dropdown" style="width:100%;" tabindex="3" name="typ" size="1">
						<option selected value="Brief">Brief</option>
						<option value="Einschreiben">Einschreiben</option>
						<option value="Zustellung">Zustellung</option>
						<option value="Fax">Fax</option>
						<option value="eMail">eMail</option>
			</select></td>
		<td></td>
		<td><select class="dropdown" style="width:100%;" tabindex="4" name="bearbeiter" size="1">
							<option _selected2_ value="_user_">_user_</option>
			</select></td><td></td></tr>

	<tr><td class="hauptpunkt" colspan="4">Postausgänge</td></tr>
	<tr><td colspan="3">
	
			<table width="100%" class="tablelist" id="sortable" cellspacing=0 cellpadding=2>
			
			        <tr class="tablelistheader">
			                <td>Datum <span class="clickable" onclick="sortTable(this,'Date')">&uarr;</span><span class="clickable" onclick="sortTable(this,'Date','DESC')">&darr;</span></td>
			                <td>Typ <span class="clickable" onclick="sortTable(this)">&uarr;</span><span class="clickable" onclick="sortTable(this,'DESC')">&darr;</span></td>
			                <td>Absender <span class="clickable" onclick="sortTable(this)">&uarr;</span><span class="clickable" onclick="sortTable(this,'DESC')">&darr;</span></td>
			                <td>Empfänger <span class="clickable" onclick="sortTable(this)">&uarr;</span><span class="clickable" onclick="sortTable(this,'DESC')">&darr;</span></td>
			                <td>Dokument <span class="clickable" onclick="sortTable(this)">&uarr;</span><span class="clickable" onclick="sortTable(this,'DESC')">&darr;</span></td>
			                <td>D</td>
			        </tr>

				<tr class="tablelist" id="_nr_" onclick="colorize('_nr_','oeffnen')"><td nowrap>_datum_</td><td>_typ_</td><td>_absender_</td><td>_empfaenger_</td><td>_inhalt_</td><td>_status_</td></tr>

			</table>
			
			<input type="hidden" name="zeile" value="">
		</td>
		
		<td valign="top"><input disabled type="submit" class="button" name="oeffnen" style="width:100%" value="Öffnen"></tr>
	
	</table>
	<input type="hidden" name="function" value="15">
	</form>
	
</td></tr></table>

<!-- Eine Error-MSG Box -->

<span id="error" style="width:100%;height:100%;position:absolute;top:0px;left:0px;display:_display_;cursor:wait;">
<span style="position:absolute;top:50%;left:50%;cursor:default;">
	<div style="position:absolute;top:-60px;left:-135px;width:300px;height:150px;">
		<img style="filter:Alpha(opacity=40);-moz-opacity:0.4;opacity:0.4;" src="/skin/shadow.gif">
	</div>
	<div class="errorheadline" style="position:absolute;top:-75px;left:-150px;width:300px;height:20px;">
		Wichtiger Hinweis !
	</div>
	<div class="errorbody" style="width:300px;height:100px;position:absolute;top:-55px;left:-150px;">
		<table width="100%" height="100%"><tr><td style="width:100px;"><img src="/skin/error.gif"></td><td class="errorbody" style="border-style:none;">_error_</td></tr></table>
	</div>
	<div class="errorbody" style="width:300px;height:30px;position:absolute;top:45px;left:-150px;border-bottom-style:solid;">
		<input type="submit" class="button" value="OKAY" onclick="Javascript:document.getElementById('error').style.display='none';document.which.empfaenger.focus();">
	</div>
</span>
</span>

</body></html>
